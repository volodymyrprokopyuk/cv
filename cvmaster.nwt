<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{{cv.title}}</title>
    <link href="cvstyle.css" rel="stylesheet">
    <script>
     function toggleDetails() {
       // Toggle content
       let details = document.getElementsByClassName("detail");
       Array.from(details).forEach(detail => detail.style.display =
         detail.style.display === "flex" ? "none" : "flex");
       let toggle = document.getElementById("toggle");
       // Toggle button text
       toggle.textContent =
         toggle.textContent === "More details" ? "Less details" : "More details";
       // Toggle page title
       document.title =
         document.title === "CV Vlad - Summary"
           ? "CV Vlad - Details" : "CV Vlad - Summary"
     }
    </script>
  </head>
  <body>
    <button id="toggle" onclick="toggleDetails()">More details</button>
    <main id="cv">
      {% block summary %}{% endblock %}
      {% block education %}{% endblock %}
      {% block employment %}{% endblock %}
    </main>
  </body>
</html>
